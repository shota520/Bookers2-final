<div class="container">
  	<div class="row">
  		<% if flash[:notice] %>
	      <div class="flash">
	      	<%= flash[:notice] %>
	    </div>
	    <% end %>
<div class="col-xs-3">
 <div class="col-xs-12">
<h2>User info</h2>
<table class='table'>
      <tr><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'100x100'  %></tr>
      <tr>
    	  <th>name</th>
    	  <th class="profile"><%= @user.name %></th>
      </tr>
      <tr>
    	  <th>introduction</th>
    	  <th class="profile"><%= @user.introduction %></th>
      </tr>
</table>

	<%= link_to "" , edit_user_path(current_user.id),class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
</div>


<div class="col-xs-12">
<h2>New book</h2>
      <%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
    <p><%= @book.errors.count %>error prohibited this book from being saved:</p>

    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

      <h4>Title</h4>
    <%= f.text_field :title,class: "form-control" %>

      <h4>Opinion</h4>
    <%= f.text_area :body, class: "form-control" %>
    <br>
    	<%= f.submit "Create Book" ,class: 'btn btn-primary col-xs-12' %>
<% end %>
</div>
</div>



<div class="col-xs-9">

<h1>Books</h1>

<table class="table table-hover table-inverse">
	<tr>
		<th></th>
		<th>Title</th>
		<th>Opinion</th>
	</tr>

<% @books.each do |book| %>

	<tr>

    <td>
      <%= attachment_image_tag @user, :profile_image, :fill,100,100, format:'jpeg',fallback: "no_image.jpg",:size=>'50x50' %>
      </td>
	<td><%=link_to book_path(book.id) do %>
		<%= book.title %>
		<% end %>
		</td>
	<td><%= book.body %></td>

<% end %>
	</tr>

	</table>
</div>
</div>
</div>
