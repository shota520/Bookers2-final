<div class="container">
    <div class="row">
      <% if flash[:notice] %>
        <div class="flash">
          <%= flash[:notice] %>
      </div>
      <% end %>
<div class="col-xs-3">
 <div class="col-xs-12">
<h2>User info</h2>
<table class='table'>
      <tr><%= attachment_image_tag @userbook.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'100x100'  %></tr>
      <tr>
        <th>name</th>
        <th class="profile"><%= @userbook.user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th class="profile"><%= @userbook.user.introduction %></th>
      </tr>
</table>

  <%= link_to "" , edit_user_path(current_user.id),class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
</div>


<div class="col-xs-12">
<h2>New book</h2>
      <%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
    <p><%= @book.errors.count %>error prohibited this book from being saved:</p>

    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

      <h4>Title</h4>
    <%= f.text_field :title,class: "form-control" %>

      <h4>Opinion</h4>
    <%= f.text_area :body, class: "form-control" %>
    <br>
      <%= f.submit "Create Book" ,class: 'btn btn-primary col-xs-12' %>
<% end %>
</div>
</div>
<div class="col-xs-9">
  <h1>Book detail</h1>

  <table class="table">

    <tr>
      <th><%= attachment_image_tag @userbook.user, :profile_image, :fill,60,60, format:'jpeg',fallback: "no_image.jpg",size:'50x50'  %>
        <br/>
        <%= link_to user_path(@userbook.user) do %>
        <%= @userbook.user.name %>
        <% end %>
      </th>
      <th><%= link_to @userbook.title,book_path(@userbook.id) %></th>
      <th><%= @userbook.body %></th>


      <% if @userbook.user == current_user %>
      <th><%=link_to "Edit", edit_book_path(@userbook.id),class:"btn btn-success" %></th>
      <th><%= link_to "Destroy", book_path(@userbook.id),class:"btn btn-danger", method: :delete, data: {confirm:'本当に消しますか？'} %></th>
      <% end %>

    </tr>
  </table>


</div>




</div>
</div>
